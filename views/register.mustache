<div class="container" style="margin-top: 2rem">
  <div class="row">
    <div class="col">
      <h1>Register</h1>
      {{#messages.error}}
          <div class="alert alert-danger" role="alert">
            {{.}}
          </div>
      {{/messages.error}}
      <form method="POST" action="/register/">
        <div class="form{{#errors.username}} has-danger{{/errors.username}}">
          <label class="formLabel" for="username-input">Username</label>
          <input type="text" id="username-input" name="username" class="form-control" value="{{username}}" />
          {{#errors.username}}
            <div class="form-control-feedback">{{msg}}</div>
          {{/errors.username}}
        </div>
        <div class="form-group{{#errors.password}} has-danger{{/errors.password}}">
          <label class="formLabel" for="password-input">Password</label>
          <input type="password" id="password-input" name="password" class="form-control" />
          {{#errors.password}}
            <div class="form-control-feedback">{{msg}}</div>
          {{/errors.password}}
        </div>
        <button type="submit" class="submitButton">Register</button>
      </form>
    </div>
  </div>
</div>
